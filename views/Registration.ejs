<%- include('./partials/header') %>
<section id="login" class="bg-img">
    <div class="content">
        <div class="login">
            <h2 class="title">Sign In</h2>
            <form action="#" method="post">
                <div class="group">
                    <label for="username">Username</label>
                    <input type="text" name="username" placeholder="Username" id="username" required class="input"/>
                </div>
                <div class="group">
                    <label for="email">Email</label>
                    <input type="email" name="email" placeholder="email" id="email" required class="input"/>
                </div>
                <div class="group">
                    <label for="phone">Phone</label>
                    <input type="number" name="phone" placeholder="Phone number" id="phone" required class="input"/>
                </div>
                <div class="group">
                    <label for="Password">Password</label>
                    <input type="password" name="password" placeholder="Password ****" id="password" required class="input"/>
                </div>
                <div class="group">
                    <label for="Password">Confirm Password</label>
                    <input type="password" name="password" placeholder="Password ****" id="password" required class="input"/>
                </div>
                <div class="group">
                    <button type="submit" class="btn primary-btn">Sign In</button>
                </div>
            </form>
            <p>I have an <a href="/login" class="link">account</a>!</p>
        </div>
    </div>
</section>
<%- include('./partials/footer') %>